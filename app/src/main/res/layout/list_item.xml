<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_recat">

    <!-- Title Text -->
    <fontsmaterialuiux.cairoBoldTextView
        android:id="@+id/id_Title_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        tools:ignore="SpUsage" />

    <!-- body Text -->
    <fontsmaterialuiux.cairoTextView
        android:id="@+id/id_body_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_Title_TextView"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:layout_marginRight="21dp"
        android:maxLines="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="21dp" />

    <!-- Date Text -->
    <fontsmaterialuiux.cairoTextView
        android:id="@+id/id_Date_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="14dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="22dp"
        tools:ignore="RelativeOverlap">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal"
            android:layout_marginEnd="6dp">

            <!-- comment icon -->
            <ImageButton
                android:id="@+id/id_comment_ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_chat"
                tools:ignore="ContentDescription" />

            <!-- comment count Text -->
            <fontsmaterialuiux.cairoTextView
                android:id="@+id/id_commentCount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/id_comment_ImageButton"
                android:layout_toRightOf="@+id/id_comment_ImageButton"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp">

            <!-- Like Icon -->
            <ImageButton
                android:id="@+id/id_like_ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_unlike"
                tools:ignore="ContentDescription" />

            <!-- Like Count Text -->
            <fontsmaterialuiux.cairoTextView
                android:id="@+id/id_likeCount_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/id_like_ImageButton"
                android:layout_toRightOf="@+id/id_like_ImageButton"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>